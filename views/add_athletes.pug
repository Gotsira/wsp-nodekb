extends layout

block content
    h1 #{title}
    form(method='POST', action='/athletes/add')
        #form-group
            label Player Name:
            input.form-control(name='name', type='text')
        #form-group
            label League:
            input.form-control(name='league', type='text')
        #form-group
            label Club Name:
            input.form-control(name='club', type='text')
        #form-group
            label Number of Titles:
            input.form-control(name='title', type='text')
        #form-group
            label Body:
            textarea.form-control(name='body')
        br
        input.btn.btn-primary(type='submit', value='Submit')
        
